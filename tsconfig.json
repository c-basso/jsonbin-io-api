{
  "compilerOptions": {
    "declarationDir": "./dist",
    "outDir": "./dist",
    "rootDir": "./src",
    "baseUrl": "./dist",
    "moduleResolution": "node",
    "lib": [
      "es6",
      "es2017"
    ],
    "noImplicitAny": true,
    "target": "es2017",
    "module": "commonjs",
    "removeComments": false,
    "declaration": true,
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "include": [
    "src"
  ],
  "exclude": [
    "dist",
    "node_modules",
    "test"
  ]
}
